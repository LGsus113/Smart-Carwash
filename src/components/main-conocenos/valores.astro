---
import SectionScheme from "@src/components/comun/section-scheme.astro";
import ItemCheck from "@src/components/main-conocenos/package/item-check-list.astro";
import H1Title from "@src/components/comun/h1-title.astro";
---

<SectionScheme id="valores" class="h-auto justify-center mb-20 animate-on-scroll">
  <article
    class="w-4/5 h-auto bg-primary flex flex-col items-center justify-center rounded-lg gap-5 p-5 shadow-inner shadow-black-10 shadow-[0px 1px 1px] shadow-black/30"
  >
    <H1Title title="Nuestros Valores" color="text-white" />
    <SectionScheme id="valores" class="h-auto justify-between">
      <ItemCheck title="Calidad" />
      <ItemCheck title="Compromiso" />
      <ItemCheck title="Confianza" />
    </SectionScheme>
  </article>
</SectionScheme>

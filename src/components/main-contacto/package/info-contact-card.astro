---
import Container from "@src/components/comun/contener-div.astro";
import H1Title from "@src/components/comun/h1-title.astro";
import { CONTACT_INFO } from "@src/utils/icon-contact-list.ts";

import Clock from "@src/assets/icon-svg/clock.svg";

const CONTACT_USE = [
  ...CONTACT_INFO,
  {
    icon: Clock,
    label: "Siempre abierto",
  },
];
---

<div
  class="w-full hauto flex-grow basis-0 flex flex-col gap-7 items-center justify-center"
>

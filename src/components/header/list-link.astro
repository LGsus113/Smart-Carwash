---
interface ListProps {
  href: string;
  label: string;
}

const { items } = Astro.props as {
  items: ListProps[];
};
---

<ul class="size-auto flex">
  {
    items.map((item) => (
      <li class="flex hover:text-black transition-all duration-300 ease-in-out">
        <a href={item.href} class="px-4 py-2">
          {item.label}
        </a>
      </li>
    ))
  }
</ul>

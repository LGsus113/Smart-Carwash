---
import DialogElement from "@src/components/dialog/estructura/dialog-element.astro";
import FormPageContactMe from "@src/components/comun/form-page-contac-me.astro";

import AvatarSMART from "@public/galeria-enterprise/smart-avatar.webp";
import WaMe from "@src/assets/redes-svg/wa-me.svg";
---

<DialogElement id="wa-me-dialog">
  <section
    class="absolute bottom-0 w-[calc(100%-40px)] h-[calc((2/3*100%)-20px)] mx-5 mb-5 flex items-center justify-center bg-white rounded-xl shadow-inner shadow-black"
  >
    <div class="size-60 rounded-t-4xl p-3 absolute top-[-45%] overflow-hidden">
      <img
        src={AvatarSMART.src}
        alt="avatar de smart carwash"
        class="size-full m-auto drop-shadow-[-2px_-1px_1px_rgba(255,255,255,0.2),1px_0_1px_rgba(255,255,255,0.5)]"
      />
    </div>

    <FormPageContactMe />
  </section>
</DialogElement>

<button
  id="openDialog"
  data-dialog-target="wa-me-dialog"
  class="group overflow-hidden flex justify-center items-center fixed z-50 right-0 bottom-0 m-7 size-auto rounded-full shadow-inner hover:cursor-pointer bg-primary border border-primary shadow-white"
>
  <WaMe
    class="icon-group text-black/65 size-10 m-2 scale-105 group-hover:text-black transition-all duration-100 group-hover:duration-300 ease-out"
  />
</button>

<script>
  import { setupDialogs } from "@src/utils/dialog-handler";

  setupDialogs();
</script>

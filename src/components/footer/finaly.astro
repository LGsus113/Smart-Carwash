---
import SectionScheme from "@src/components/comun/section-scheme.astro";
import Separata from "@src/components/footer/separata.astro";
import Contenedor from "@src/components/comun/contener-div.astro";
import ListContact from "@src/components/footer/list-contact.astro";

import { CONTACT_INFO, SOCIAL_MEDIA } from "@src/utils/icon-contact-list.ts";
---

<SectionScheme
  id="final"
  class="w-full h-auto flex-col justify-center bg-black animate-on-scroll"
>
  <Contenedor class="gap-40 justify-between mt-10 text-center">
    <ListContact
      title="Smart Carwash"
      description="Expertos en cuidado automotriz, ofreciendo servicios premium desde N-####."
    />
    <ListContact
      title="Contacto"
      description="Si deseas ubicarnos, todos nuestros datos oficiales aquí abajo."
      class="justify-center"
      items={CONTACT_INFO}
    />
    <ListContact
      title="Síguenos"
      description="Nuestras redes oficiales a tu disposición, síguenos para mantenerte al día."
      class="justify-center"
      items={SOCIAL_MEDIA}
    />
  </Contenedor>
  <Separata />
</SectionScheme>

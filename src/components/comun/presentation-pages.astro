---
import Isotipo from "@public/galeria-enterprise/marca2.webp";
import SectionScheme from "@src/components/comun/section-scheme.astro";
import Container from "@src/components/comun/contener-div.astro";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const className = "flex-grow basis-0";
---

<SectionScheme
  id="services"
  className="h-[40vh] flex-col items-center justify-center bg-black text-white"
>
  <Container class="items-center gap-20 pt-[4%]">
    <div class:list={className}>
      <h1 class="font-bungee-inline text-5xl mb-5">{title}</h1>
      <p class="text-2xl text-uni-secondary">
        <slot />
      </p>
    </div>
    <div class:list={[className, "flex justify-end"]}>
      <img
        src={Isotipo.src}
        alt="isotipo del logo de la marca"
        class="drop-shadow-[0_0_1px_rgba(250,250,250,0.5)]"
      />
    </div>
  </Container>
</SectionScheme>
